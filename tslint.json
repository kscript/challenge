{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "no-bitwise": false,
    "no-empty": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "semicolon": [
      false,
      "always"
    ],
    "arrow-parens": false,
    "trailing-comma": [false],
    "quotemark": [
      true,
      "single"
    ]
  }
}